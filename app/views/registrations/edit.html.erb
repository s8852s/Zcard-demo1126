<h1>編輯會員資料</h1>

<%= link_to "返回上一頁", :back %>

<%= form_with(model: current_user, url: user_path, method: "put", local: true) do |form| %>

<div class="fields">
    <%= form.label :email, "信箱" %>
    <%= form.text_field :email %>
</div>


<div class="fields">
    <%= form.label :nickname, "暱稱" %>
    <%= form.text_field :nickname %>
</div>

<%= form.submit "確定修改" %>
<% end %>